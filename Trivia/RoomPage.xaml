<Page x:Class="Trivia.RoomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Trivia"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RoomPage"
      Background="LightBlue">

    <StackPanel Margin="30" Width="400">

        <TextBlock Text="Room Details" FontWeight="Bold" FontSize="20" Margin="0,0,0,20"/>

        <TextBlock x:Name="RoomNameText" />
        <TextBlock x:Name="MaxPlayersText" />
        <TextBlock x:Name="QuestionCountText" />
        <TextBlock x:Name="AnswerTimeoutText" />

    </StackPanel>
</Page>
