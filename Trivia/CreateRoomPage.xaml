<Page x:Class="Trivia.CreateRoomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Trivia"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateRoomPage"
      Background="LightBlue">

    <StackPanel Margin="30" Width="300" VerticalAlignment="Center" HorizontalAlignment="Center">

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Room Name:" Width="120" VerticalAlignment="Center" FontWeight="SemiBold"/>
            <TextBox x:Name="RoomNameInput" Width="160" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Max Players:" Width="120" VerticalAlignment="Center" FontWeight="SemiBold"/>
            <TextBox x:Name="MaxPlayersInput" Width="160" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Question Count:" Width="120" VerticalAlignment="Center" FontWeight="SemiBold"/>
            <TextBox x:Name="QuestionCountInput" Width="160" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Answer Timeout:" Width="120" VerticalAlignment="Center" FontWeight="SemiBold"/>
            <TextBox x:Name="AnswerTimeoutInput" Width="160" />
        </StackPanel>

        <Button Content="Create Room" Click="CreateRoom_Click" Height="40" Margin="0,20,0,0" />
        <Button Content="Back" Click="Back_Click" Height="40" />

    </StackPanel>
</Page>
