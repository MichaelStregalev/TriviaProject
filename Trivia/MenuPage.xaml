<Page x:Class="Trivia.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Trivia"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage"
      Background="LightBlue">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

        <Button Content="Join Room" Click="JoinRoom_Click" Height="40" />
        <Button Content="Create Room" Click="CreateRoom_Click" Height="40" />
        <Button Content="Statistics" Click="Statistics_Click" Height="40" />
        <Button Content="Exit" Click="Exit_Click" Height="40" />

    </StackPanel>
</Page>
