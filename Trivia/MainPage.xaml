<Page x:Class="Trivia.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Trivia"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage"
      Background="LightBlue">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

        <TextBlock Text="Welcome to... Trivia!" FontSize="24" HorizontalAlignment="Center" />

        <Button Content="Login" Click="Login_Click" Height="40" />
        <Button Content="Sign up" Click="Signup_Click" Height="40" />

    </StackPanel>
</Page>